<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:contentPadding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/btn_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="grid view"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/grid_view"
                android:gravity="start|center" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="20dp"
                android:text="list view"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/list_view"
                android:gravity="start|center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_modes"
            android:layout_below="@id/btn_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/theme_light_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="light mode"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/light_mode"
                android:gravity="start|center" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/theme_dark_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="20dp"
                android:text="dark mode"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/dark_mode"
                android:gravity="start|center" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@id/btn_modes"
            android:text="Delete All"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/delete"
            android:gravity="start|center" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>